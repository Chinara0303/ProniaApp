@model IEnumerable<SectionHeader>
@{
    ViewData["Title"] = "Index";
}
@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body table-border-style">
                        <div class="table-responsive">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Key</th>
                                        <th>Value</th>
                                        <th>Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var secHeader in Model)
                                    {
                                        <tr data-id="@secHeader.Id">
                                            <td>
                                                @secHeader.Key
                                            </td>
                                            <td>@Html.Raw(secHeader.Value)</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@secHeader.Id" data-toggle="tooltip" data-original-title="Edit" class="edit">
                                                    <i class="fa-solid fa-pen-to-square" style="color: #2bca16;"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Script{
    <script src="~/admin/assets/js/index.js"></script>
}

