@model BlogComment
@{
    ViewData["Title"] = "Detail";
}
@section Css{
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <form asp-action="Detail">
                    <div class="form-group">
                        <label>Blog Name</label>
                        <input disabled class="form-control" asp-for="Blog.Title">
                    </div>
                    <div class="form-group">
                        <label>User Name</label>
                        <input disabled class="form-control" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input disabled class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <input disabled class="form-control" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <input disabled class="form-control" asp-for="Message">
                    </div>
                    <a asp-action="Index" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Go to list</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script src="~/admin/assets/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}




