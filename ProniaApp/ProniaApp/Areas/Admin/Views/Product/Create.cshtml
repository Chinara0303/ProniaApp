@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <span class="text-danger">@ViewBag.error</span>
                    <div class="form-group">
                        <label>Images</label>
                        <input class="form-control" asp-for="Photos">
                        <span class="text-danger" asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <label>Main Image</label>
                        <input class="form-control" asp-for="MainPhoto">
                        <span class="text-danger" asp-validation-for="MainPhoto"></span>
                    </div>
                    <div class="form-group">
                        <label> Hover Image</label>
                        <input class="form-control" asp-for="HoverPhoto">
                        <span class="text-danger" asp-validation-for="HoverPhoto"></span>
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" asp-for="Price" type="number" step=".01"/>
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label>Stock Count</label>
                        <input class="form-control" asp-for="StockCount" type="number"/>
                        <span class="text-danger" asp-validation-for="StockCount"></span>
                    </div>
                    <div class="form-group">
                        <label>Color</label>
                        <select class="form-control" asp-for="ColorId" asp-items="@ViewBag.colors"></select>
                    </div>
                    <div class="form-group">
                        <label>Tags</label>
                        <select class="form-control" asp-for="TagIds" asp-items="@ViewBag.tags"></select>
                    </div>
                    <div class="form-group">
                        <label>Sizes</label>
                        <select class="form-control" asp-for="SizeIds" asp-items="@ViewBag.sizes"></select>
                    </div>
                    <div class="form-group">
                        <label>Categories</label>
                        <select class="form-control" asp-for="CategoryIds" asp-items="@ViewBag.categories"></select>
                    </div>
                    <button type="submit" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Submit</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>

    </div>
</section>

