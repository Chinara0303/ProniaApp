@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="text-danger mb-2" asp-validation-summary="All"></div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div class="login-form" style="position:relative;left:300px">
                        <h4 class="login-title">Forgot Password</h4>

                        <div class="row">
                            <div class="col-lg-12">
                                <label>Password</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="col-lg-12">
                                <label>Repeat Password</label>
                                <input asp-for="ConfirmPassword" placeholder="Repeat Password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="col-lg-12 pt-5">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Send
                                </button>
                            </div>
                            <input type="hidden" asp-for="Token" value="@Model.Token" />
                            <input type="hidden" asp-for="UserId" value="@Model.UserId" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

