@inject ILayoutService layout;
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/website-images/@layout.GetSectionBackgroundImages()["AccountIntroBg"]">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
               
               @await Component.InvokeAsync("Login")

               @await Component.InvokeAsync("Register")
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->

