@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div class="login-form" style="position:relative;left:300px">
                        <h4 class="login-title">Forgot Password</h4>

                        <div class="row">
                            <div class="col-lg-12">
                                <label>Email</label>
                                <input type="email" asp-for="Email" placeholder="Email Address" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="col-lg-12 pt-5">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Send
                                </button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}