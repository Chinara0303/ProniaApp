                <div class="row">
                    <div class="col-lg-12">
                        <div class="swiper-container brand-slider">
                            <div class="swiper-wrapper">
                                @foreach (var item in Model.Brands)
                                {
                                    <div class="swiper-slide">
                                        <a class="brand-item" href="#">
                                            <img src="~/assets/images/website-images//@item.Image"
